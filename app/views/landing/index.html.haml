.site-wrap
  .site-mobile-menu.site-navbar-target
    .site-mobile-menu-header
      .site-mobile-menu-close.mt-3
        %span.icon-close2.js-menu-toggle
    .site-mobile-menu-body
  %header.site-navbar.py-4.js-sticky-header.site-navbar-target{:role => "banner"}
    .container-fluid
      .d-flex.align-items-center
        .site-logo.mr-auto.w-25
          %a{:href => "index.html"} Funny Videos
        .mx-auto.text-center
          %nav.site-navigation.position-relative.text-right{:role => "navigation"}
            %ul.site-menu.main-menu.js-clone-nav.mx-auto.d-none.d-lg-block.m-0.p-0
              %li
                %a.nav-link{:href => "#home-section"} Home
              %li
                %a.nav-link{:href => "#courses-section"} Courses
              %li
                %a.nav-link{:href => "#programs-section"} Programs
              %li
                %a.nav-link{:href => "#teachers-section"} Teachers
        .ml-auto.w-25
  #home-section.intro-section
    .slide-1{"data-stellar-background-ratio" => "0.5", :style => "background-image: url(#{image_path("images/hero_1.jpg")});"}
      .container
        .row.align-items-center
          .col-12
            .row.align-items-center
              .col-lg-6.mb-4
                %h1 Learn From The Expert
                %p.mb-4 Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime ipsa nulla sed quis rerum amet natus quas necessitatibus.
              .col-lg-5.ml-auto
                %form.form-box{:action => "", :method => "post"}
                  %h3.h4.text-black.mb-4 Sign Up
                  .form-group
                    %input.form-control{:placeholder => "Email Addresss", :type => "text"}/
                  .form-group
                    %input.form-control{:placeholder => "Password", :type => "password"}/
                  .form-group.mb-4
                    %input.form-control{:placeholder => "Re-type Password", :type => "password"}/
                  .form-group
                    %input.btn.btn-primary.btn-pill{:type => "submit", :value => "Sign up"}/
  %footer.footer-section.bg-white{style: "padding: 0"}
